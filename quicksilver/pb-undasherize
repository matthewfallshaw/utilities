#!/usr/bin/env ruby
# Un-Dasherize the clipboard on OSX

def notify(message)
  require 'shellwords'
  `/usr/local/bin/growlnotify -a Quicksilver -m #{message.shellescape}`
  message
end

output = IO.popen('pbpaste', 'r').read.gsub(/[-_]/," ").gsub(/^ +| +$/,"")
IO.popen('pbcopy', 'w').print(output)
notify(output)
